  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch via ts-node",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "cwd": "${workspaceRoot}/server",
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "${workspaceRoot}/server/node_modules/ts-node/register"
      ],
      "args": ["${workspaceRoot}/server/src/app.ts"],
      "restart": true
    }
  ]
}
